config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd42:26aa:4962::/48'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth0'

config device
    option name 'br-voucher'
	option type 'bridge'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'

config interface 'modemmanager'
	option proto 'modemmanager'
	option device '/sys/devices/pci0000:00/0000:00:15.0/usb2/2-1/2-1.1'
	option apn 'internet'
	option auth 'none'
	option iptype 'ipv4'
	option loglevel 'ERR'
	option metric '10'
	option force_connection '1'

config interface 'wan'
	option proto 'dhcp'
	option device 'eth1'
	option metric '1'

config interface 'tethering'
	option proto 'dhcp'
	option device 'usb0'
	option metric '2'

config interface 'chilli'
	option proto 'none'
	option device 'tun0'

config interface 'hotspot_voucher'
	option proto 'static'
	option ipaddr '10.10.30.1'
	option netmask '255.255.255.0'
	option device 'br-voucher'

